.comment {
  width: 93%;
  margin: auto;
}
.comment .comment-body {
  width: 100%;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.comm-eidt {
  width: 100%;
  height: 260rpx;
  margin-bottom: 55rpx;
}
.comm-eidt textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid rgba(126, 126, 126, 0.1);
  border-radius: 10rpx;
}
.comm-eidt button {
  margin-top: 10rpx;
}
.lm {
  width: 100%;
  height: 100rpx;
  line-height: 50rpx;
}
.lm image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  left: 0;
  top: 15rpx;
  margin-right: 20rpx;
}
.comm {
  width: 100%;
  margin-bottom: 20rpx;
  line-height: 75rpx;
  height: 250rpx;
  border-bottom: 1rpx solid rgba(142, 142, 142, 0.3);
}
.comm .cava {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  position: relative;
  top: 30rpx;
  margin-right: 20rpx;
}
.comm-box {
  width: 100%;
  height: 120rpx;
}
.comm-box .comm-left {
  width: 70%;
  float: left;
}
.comm-box .comm-right {
  float: left;
  width: 30%;
}
.comm-box .comm-right image {
  width: 35rpx;
  height: 35rpx;
  margin-left: 35rpx;
}

