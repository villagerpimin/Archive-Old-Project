.frame {
  width: 95%;
  margin: auto;
  position: relative;
  top: 15rpx;
  bottom: 30rpx;
  border-bottom: 1rpx solid rgba(142, 142, 142, 0.3);
}
.headpic {
  width: 100%;
  height: 330rpx;
  /* background-color: #007AFF; */
  margin-bottom: 30rpx;
}
.headpic image {
  width: 100%;
  height: 100%;
}
.tit {
  width: 100%;
  height: 240rpx;
  position: relative;
  top: 40rpx;
}
.tit .big {
  /* 大标题 */
  font-weight: 700;
  font-size: 36rpx;
  text-align: center;
  width: 100%;
  height: 120rpx;
}
.tit .lit {
  /* 小标题 */
  width: 90%;
  height: 40rpx;
  color: #898989;
  font-size: 24rpx;
  margin: auto;
}
.content {
  width: 90%;
  text-indent: 45rpx;
  margin: auto;
}

