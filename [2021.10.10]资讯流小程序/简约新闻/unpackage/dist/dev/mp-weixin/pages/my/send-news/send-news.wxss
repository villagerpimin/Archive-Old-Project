.frame {
  width: 92%;
  margin: auto;
}
.frame textarea {
  width: 100%;
  border: solid 1rpx rgba(128, 128, 128, 0.5);
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.frame uni-group {
  margin-bottom: 50rpx;
}
.tips {
  border-radius: 20rpx;
  width: 100%;
  height: 80rpx;
  margin: auto;
  border: solid 1rpx rgba(128, 128, 128, 0.4);
  line-height: 80rpx;
  text-align: center;
  position: relative;
  top: 20rpx;
  font-size: 26rpx;
}
.news_title {
  position: relative;
  top: 40rpx;
}
.news_title textarea {
  height: 120rpx;
}
.tag {
  margin-top: 30rpx;
}
.tag picker {
  height: 80rpx;
  line-height: 80rpx;
}
.up_preview {
  width: 280rpx;
  height: 220rpx;
}
.send {
  width: 110rpx;
  height: 110rpx;
  text-align: center;
  position: fixed;
  right: 60rpx;
  bottom: 90rpx;
  z-index: 999;
}
.send button {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #4cd964;
  font-size: 26rpx;
  line-height: 110rpx;
  color: #FFFFFF;
}
.zheng textarea {
  height: 520rpx;
}
.uni-file-picker__header {
  padding-top: 5px;
  padding-bottom: 10px;
  display: flex;
  justify-content: space-between;
}

