<view class="frame"><block wx:for="{{changeList}}" wx:for-item="item" wx:for-index="index"><view class="out"><view class="outin"><view>{{item+"："}}</view><view><block wx:if="{{index==0}}"><image src="{{userInfo.avatar}}" data-event-opts="{{[['tap',[['changeAvatar',['$event']]]]]}}" bindtap="__e"></image></block><block wx:if="{{index==1}}"><view data-event-opts="{{[['tap',[['changeText',['昵称']]]]]}}" bindtap="__e">{{userInfo.name+"     >"}}</view></block><block wx:if="{{index==2}}"><picker range="{{sex}}" value="{{userInfo.gender}}" data-event-opts="{{[['change',[['getSex',['$event']]]]]}}" bindchange="__e">{{''+sex[userInfo.gender]+'     >'}}</picker></block><block wx:if="{{index==3}}"><view data-event-opts="{{[['tap',[['changeText',['邮箱']]]]]}}" bindtap="__e">{{(userInfo.mail==null?"未绑定":userInfo.mail)+"     >"}}</view></block></view></view></view></block><view hidden="{{!(saveFlag)}}" class="save"><view data-event-opts="{{[['tap',[['saveChange']]]]}}" class="in" bindtap="__e">保存更改</view></view></view>